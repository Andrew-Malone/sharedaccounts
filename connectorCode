public class Script : ScriptBase
{
    public override async Task<HttpResponseMessage> ExecuteAsync()
    {
        if(this.Context.OperationId == "GetAccounts")
        {
            return await this.HandleGetSharedAccounts().ConfigureAwait(false);
        }

        HttpResponseMessage response = new HttpResponseMessage(HttpStatusCode.OK);
        response.Content = CreateJsonContent($"{this.Context.OperationId}");
        return response;
    }

    private async Task<HttpResponseMessage> HandleGetSharedAccounts()
    {
        HttpResponseMessage response;

        // body of the incoming request
        //{
        // "userid":""
        //}
        var userid = await this.Context.Request.Content.ReadAsStringAsync().ConfigureAwait(false);

        response = new HttpResponseMessage(HttpStatusCode.OK);
        response.Content = new StringContent(userid, Encoding.UTF8, "application/json");
        return response;
    }
}
